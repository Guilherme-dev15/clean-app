{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"], // Garante que tipos de DOM e JSX sejam reconhecidos
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx", // ESSA LINHA É FUNDAMENTAL para que o TypeScript entenda o JSX

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"], // Garante que o TypeScript inclua todos os arquivos na pasta src
  "references": [{ "path": "./tsconfig.node.json" }] // Referência para a configuração do Node.js
}